{# src/AppBundle/Resources/views/foreignkeys/dkeyword.html.twig #}

{% set default_val = default_val|default(null) %}


<select name="widget_keywords[]" id="keywords_{{ index }}" style="width:200px" ></select>



								
<script type="text/javascript">
var tmp_class{{ index }}="{{ index }}";
$(document).ready(
	function()
	{
		$("#keywords_{{ index }}").select2(select2_generic("{{ path('search_all_keywords_autocomplete')}}","word","word" ),0);
		{% if not default_val is null %}
		var newOption = new Option("{{ default_val }}", "{{ default_val }}", true, true);
		$('#keywords_{{ index }}').append(newOption).trigger('change');
		{% endif %}
	}
);
</script>						
