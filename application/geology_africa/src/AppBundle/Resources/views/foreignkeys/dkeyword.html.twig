{# src/AppBundle/Resources/views/foreignkeys/dkeyword.html.twig #}
{% import "@App/forms/read_test.html.twig" as read_test  %}
{% set read_mode=read_mode|default("read") %}

{% set val_to_display = default_val.keyword|default(null) %}
{% set val_pk = default_val.pk|default(null) %}

<input type="hidden" name="widget_keywords_pk[]" id="keywords_pk_{{ index }}" >
{{ read_test.select2_read_mode(read_mode, "keywords_" ~ index , "widget_keywords[]", path('search_all_keywords_autocomplete'), "word", val_to_display, "", "width:200px")}}


								
<script type="text/javascript">
$(document).ready(
	function()
	{		
		{% if not default_val is null %}		
			$('#keywords_pk_{{ index }}').val('{{ val_pk }}');
		{% endif %}		 
	}	
);
</script>						
