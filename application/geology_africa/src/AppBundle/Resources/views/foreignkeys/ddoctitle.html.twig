{# src/AppBundle/Resources/views/foreignkeys/ddoctitle.html.twig #}
{% import "@App/forms/read_test.html.twig" as read_test  %}
{% set read_mode=read_mode|default("read") %}

{% set val_to_display = default_val.title|default(null) %}
{% set val_pk = default_val.pk|default(null) %}
{% if not val_to_display is null %}
{% set val_to_display=val_to_display|replace({"\r":"-", "\n":"-"}) %}
{% endif %}

<input type="hidden" name="widget_titles_pk[]" id="titles_pk_{{ index }}" readonly ></input>
{{ read_test.input_read_mode(read_mode, "textarea", "titles_" ~ index, "widget_titles[]" , val_to_display, '', "width:400px") }}
				



								
<script type="text/javascript">
var tmp_class{{ index }}="{{ index }}";
$(document).ready(
	function()
	{
		
		{% if not default_val is null %}

			$("#titles_pk_{{ index }}").val("{{ val_pk }}");
		{% endif %}
	}
);
</script>						
